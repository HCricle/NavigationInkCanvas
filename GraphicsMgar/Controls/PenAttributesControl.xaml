                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="位置"
                                                               Margin="0,0,10,0"/>
                                                                <Slider Maximum="100"
                                                                Minimum="0"       
                                                                Value="{x:Bind Position,Mode=TwoWay,Converter={StaticResource SingleDoubleConverter}}"/>
                                                            </StackPanel>
                                                            <Button x:Name="BtnLinerDelete"
